<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DefectFind | Home</title>

    <!-- Bootstrap files -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="/css/home_style.css">
</head>

<body>

    <!-- Sidebar -->
    <div class="side-container p-3 text-center">
        <div class="logo">
            <h2>D</h2>
        </div>
        
        <div class="icons mt-4">
            <i class="bi bi-house"></i>
        </div>
    </div>
    
    <div class="content-container">
    <!-- Upload Form Modal -->
    <div id="formModal" class="form-modal">
        <!-- Form content -->

        <div class="modal-content">
            <div class="close-container">
                <span class="close">&times;</span>
            </div>
            <h1 class="create-record-title">Create Record</h1>
            <form action="/record/upload" method="POST" onsubmit="closeModal()" enctype="multipart/form-data"
                class="create-record">
                <div class="textfield-label">
                    <label for="numberPlate">Number Plate</label><br>
                    <input type="text" id="numberPlate" name="numberPlate" required>
                </div>
                <div class="upload-container">
                    <input type="file" id="images" name="images" accept="image/png, image/jpeg, image/jpg" multiple
                        required>
                </div>
                <button class="submit-button" type="submit">Submit</button>
            </form>
        </div>
    </div>


        <div class="content d-flex flex-column p-5">
            <!-- Header section -->
            <div class="header d-flex justify-content-between">
                <div class="header-title">
                    <h2>DEFECTFIND</h2>
                </div>

                <div class="icon-list">
                    <i class="bi bi-plus-square" onclick="addRecord();"></i>
                    <a href="logout"><i class="bi bi-box-arrow-right"></i></a>
                </div>
            </div>

            <!-- Reports -->
            <div class="reports-container mt-5">
                <div class="folder d-flex align-items-center">
                    <i class="bi bi-folder"></i>
                    <i class="bi bi-chevron-down m-1"></i>
                    <h5 class="m-2">All files</h5>
                </div>
                <ul class="list-group mt-5">
                    <% locals.records.forEach((item)=> { %>
                        <a target="_blank" href=<%="/reports/" + item.id +".pdf" %> >
                            <li class="list-group-item p-2 d-flex align-items-center justify-content-between">
                                <div class="leading d-flex align-items-center">
                                    <i class="bi bi-file-earmark-pdf"></i>
                                    <div class="name">
                                        <%= item.id %>
                                    </div>
                                </div>
                                <div class="date">
                                    <%= item.time.toString().split('GMT')[0] %>
                                </div>
                                <i class="bi bi-three-dots-vertical"></i>
                            </li>
                        </a>
                        <% }) %>
                </ul>
            </div>
        </div>
    </div>
    <script src="/js/home_script.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
</body>

</html>